{
  "info": {
    "name": "K-12 SIS White-Labeling API",
    "description": "Complete white-labeling API collection for K-12 Student Information System",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "your-jwt-token-here",
      "type": "string"
    },
    {
      "key": "tenant_id",
      "value": "your-tenant-uuid-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Branding Configuration",
      "item": [
        {
          "name": "Get Branding Configuration",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/white-labeling/branding",
              "host": ["{{base_url}}"],
              "path": ["white-labeling", "branding"]
            },
            "description": "Retrieve the current branding configuration for the tenant"
          },
          "response": []
        },
        {
          "name": "Update Branding Configuration",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"colors\": {\n    \"primary\": \"#dc2626\",\n    \"secondary\": \"#ef4444\",\n    \"header_background\": \"#ffffff\",\n    \"footer_background\": \"#f8fafc\",\n    \"text\": \"#1f2937\",\n    \"link\": \"#dc2626\",\n    \"button\": \"#dc2626\",\n    \"button_text\": \"#ffffff\",\n    \"accent\": \"#059669\",\n    \"border\": \"#e5e7eb\"\n  },\n  \"logo_url\": \"https://cdn.example.com/springfield-logo.png\",\n  \"custom_content\": {\n    \"footer_text\": \"Â© 2024 Springfield High School. All rights reserved.\",\n    \"welcome_message\": \"Welcome to Springfield High School Student Portal!\",\n    \"login_message\": \"Please sign in to access your student account.\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/white-labeling/branding",
              "host": ["{{base_url}}"],
              "path": ["white-labeling", "branding"]
            },
            "description": "Update the branding configuration for the tenant"
          },
          "response": []
        },
        {
          "name": "Get Generated CSS",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/white-labeling/css/{{tenant_id}}",
              "host": ["{{base_url}}"],
              "path": ["white-labeling", "css", "{{tenant_id}}"]
            },
            "description": "Get the generated CSS for the tenant's branding"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Asset Management",
      "item": [
        {
          "name": "Upload Branding Asset",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"asset_type\": \"logo\",\n  \"file_data\": \"base64_encoded_file_data_here\"\n}"
