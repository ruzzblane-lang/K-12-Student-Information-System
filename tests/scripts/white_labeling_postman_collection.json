              "raw": "{\n  \"domain\": \"portal.springfield.edu\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/white-labeling/validate-domain",
              "host": ["{{base_url}}"],
              "path": ["white-labeling", "validate-domain"]
            },
            "description": "Validate if a custom domain is available"
          },
          "response": []
        },
        {
          "name": "Setup Custom Domain",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"domain\": \"portal.springfield.edu\",\n  \"verification_code\": \"abc123def456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/white-labeling/setup-custom-domain",
              "host": ["{{base_url}}"],
              "path": ["white-labeling", "setup-custom-domain"]
